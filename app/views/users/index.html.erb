<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.firstname %></td>
        <td><%= user.surname %></td>
        <td>
          <%= link_to 'Show', user_path(user.id) %>
          <%= link_to 'Edit', edit_user_path(user.id) %>
          <%= link_to 'Destroy', user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

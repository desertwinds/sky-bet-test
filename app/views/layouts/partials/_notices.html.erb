<% if notice %>
  <dir class="alert alert-info alert-dismissible alert-fixed" role="alert">
    <button class="close" aria-label="Close" data-dismiss="alert" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= notice %>
  </dir>
<% end %>
<% if alert %>
  <dir class="alert alert-warning alert-dismissible alert-fixed" role="alert">
    <button class="close" aria-label="Close" data-dismiss="alert" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= alert %>
  </dir>
<% end %>